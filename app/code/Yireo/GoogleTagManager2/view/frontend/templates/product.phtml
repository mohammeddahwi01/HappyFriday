$helper = $block->getHelper();
$viewModel = $block->getViewModel();
?>
<?php if($helper->isEnabled()) : ?>
<?php $product = $block->getProduct(); ?>
<?php if(!empty($product) && $product->getId() > 0) : ?>
    <?php $block->addAttribute('productId', $product->getId()); ?>
